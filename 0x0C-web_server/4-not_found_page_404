#!/usr/bin/env bash
#Nginx server so that /redirect_me is redirecting to another page
apt-get update
apt-get -y install nginx
sudo service nginx start

echo "Holberton School" | sudo tee /var/www/html/index.html

otherdefault="/etc/nginx/sites-enabled/default"
location="\\\tlocation /redirect_me {\n\t\t return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}\n"
sudo sed -i "30i $location" "$otherdefault"
echo "Ceci n'est pas une page" | sudo tee /var/www/html/page_error.html
error_page="error_page 404 /page_error.html;\nlocation = /page_error.html {\nroot /usr/share/nginx/html;\ninternal;\n}\n"
sudo sed -i "33i $error_page" "$otherdefault"
sudo service nginx restart